<h1>Welcome to Message Board!</h1>

<div class="chat">
  <% if (messages) { %>
  <ul class="chat-list">
    <% messages.forEach(({ text, username, date }) => { %> <%-
    include('message', { text, username, date }) %> <% }); %>
  </ul>
  <% } else { %>
  <p>No messages yet. Be the first to add one!</p>
  <% } %>

  <a href="/new" class="btn">New Message</a>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const chatList = document.querySelector(".chat-list");
      if (chatList) chatList.scrollTop = chatList.scrollHeight;
    });
  </script>
</div>
